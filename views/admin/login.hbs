<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col">
      <h4>Agregar una novedad</h4>
      <form action="/admin/login" method="post">
        <div class="form-group">
            <imput type="text" class="form-control"
            placeholder="titulo" name="titulo">
        </div>
        <div class="form-group">
          <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
        </div>
        <div class="form-group">
          <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
      {{#if error}}
      <p>Usuario o Password mal</p>
      {{/if}}
    </div>
  </div>
</div>